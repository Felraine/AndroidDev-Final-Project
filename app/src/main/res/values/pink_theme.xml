<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/customPrimaryColor</item>
        <item name="colorPrimaryDark">@color/customPrimaryDarkColor</item>
        <item name="colorAccent">@color/customAccentColor</item>
    </style>

    <!-- Custom theme -->
    <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/customPrimaryColor</item>
        <item name="colorPrimaryDark">@color/customPrimaryDarkColor</item>
        <item name="colorAccent">@color/customAccentColor</item>
        <item name="android:textColor">@color/customTextColor</item>
        <item name="android:windowBackground">@color/customBackgroundColor</item>
    </style>
</resources>
